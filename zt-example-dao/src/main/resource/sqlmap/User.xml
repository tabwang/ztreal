<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.zt.example.domain.user.User">
    <resultMap id="LotteryRecordsMap" type="LotteryRecordsPo">
        <result column="user_id" property="userID" />
        <result column="password" property="password" />
    </resultMap>

    <sql id="commonColumns">
      user_id, password
    </sql>

    <select id="queryByguID" parameterType="java.lang.String"
            resultMap="LotteryRecordsMap">
        select <include refid="commonColumns"/>
        from example_user
        where user_id=#{userID}
    </select>

    <select id="queryAll" parameterType="LotteryRecordsPo"
            resultMap="LotteryRecordsMap">
        select <include refid="commonColumns"/>
        from example_user
        <where>
            <if test="userID!=null and userID!=''">
                user_id=#{userID}
            </if>
        </where>
    </select>


    <insert id="insertUser" parameterType="com.zt.example.domain.user.User">
            insert into example_user (user_id, password,
            values (#{userID},#{password},
        </insert>
</mapper>